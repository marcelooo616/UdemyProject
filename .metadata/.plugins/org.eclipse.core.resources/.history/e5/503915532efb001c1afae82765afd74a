package aplication;

import java.util.Scanner;

import entiti.Conta;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Conta bancaria");
		System.out.print("Nome: ");
		String nome = sc.nextLine();
		System.out.print("Numero da Conta: ");
		int numero = sc.nextInt();
		System.out.print("Quer fazer um deposito?(s/n): ");
		char dep = sc.next().charAt(0);
		Conta conta = new Conta(numero, nome);
		if( dep == 's') {
			System.out.print("Valor para Deposito: ");
			double deposito = sc.nextDouble();	
			conta.deposito(deposito);
		}else {
			System.out.println(conta);
		}
		
		
		//Conta conta = new Conta(numero, nome);
		
		System.out.println(conta);
		
		System.out.print("Quer fazer um deposito?(s/n): ");
		char simnao = sc.next().charAt(0);
		
		if (simnao == 's') {
			System.out.print("Valor para Deposito: ");
			double valor = sc.nextDouble();
		    conta.deposito(valor);
		    
		    System.out.println(conta);
		    System.out.println("\n");
		    System.out.println();
		    
		    System.out.print("Quer fazer um saque?(s/n): ");
			char saque = sc.next().charAt(0);
			
			if (saque == 's' ) {
				System.out.print("Digite o valor para saque: ");
				valor = sc.nextDouble();
				
				conta.saque(valor);
				
				System.out.println(conta);								
			}else if (saque == 'n') {
				System.out.println();
				System.out.println();
				System.out.println("Obrigada e volte sempre!!");
				System.out.println("Segue a baixo os dados da sua conta.");
				System.out.println(conta);
			}
			
			
		}else if (simnao == 'n') {
			System.out.println();
			System.out.println();
			System.out.println("Obrigada e volte sempre!!");
			System.out.println("Segue a baixo os dados da sua conta.");
			System.out.println(conta);
		}
		

	}

}
