package aplication;

import java.util.Scanner;

import entiti.Conta;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Conta bancaria");
		System.out.println("Nome: ");
		String nome = sc.nextLine();
		System.out.print("Numero da Conta: ");
		int numero = sc.nextInt();
		System.out.println("Valor para Deposito: ");
		double deposito = sc.nextDouble();
		
		Conta conta = new Conta(numero, nome, deposito);
		
		System.out.println(conta);
		
		System.out.println("Quer fazer um deposito?(s/n)");
		char simnao = sc.next().charAt(0);
		
		if (simnao == 's') {
			System.out.print("Valor para Deposito: ");
			double valor = sc.nextDouble();
		    conta.deposito(valor);
		    
		    System.out.println(conta);
		    
		    System.out.println("Quer fazer um saque?(s/n)");
			char saque = sc.next().charAt(0);
			
			if (saque == 's' ) {
				System.out.print("Digite o valor para saque: ");
				valor = sc.nextDouble();
				
				conta.deposito(valor);
				
				System.out.println(conta);
				
				
			}
		}else {
			System.out.println(conta);
		}
		

	}

}
