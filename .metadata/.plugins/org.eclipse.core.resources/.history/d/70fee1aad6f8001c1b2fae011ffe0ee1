import java.util.Scanner;

public class CalculoAreaLadosTriangulo {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Entre com os lados do trinagulos 'x' respectivamente A B e C: ");
		
		double xA = sc.nextDouble();
		double xB = sc.nextDouble();
		double xC = sc.nextDouble();
		
		System.out.println("Entre com os lados do trinagulos 'y' respectivamente A B e C: ");
		
		double yA = sc.nextDouble();
		double yB = sc.nextDouble();
		double yC = sc.nextDouble();
		
		double px = 0, ax = 0 ,py = 0, ay = 0;
		
		px = (xA+xB+xC)/2;
	
		ax = px * (px - xA) * ( px - xB) * (px - xC);
		ax = Math.sqrt(ax);

		py = (yA+yB+yC)/2;
		
		ay = py * (py - yA) * ( py - yB) * (py - yC);
		ay = Math.sqrt(ay);
		
		System.out.printf("Area do triangulo X : %.4f" , ax , "\n");
		System.out.printf("Area do triangulo Y : %.4f" , ay);
				

	}

}
