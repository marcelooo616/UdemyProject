package Application;
import java.util.Scanner;

import entites.Triangle;

public class CalculoAreaLadosTriangulo {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		Triangle x, y;
		x = new Triangle();
		y = new Triangle();
		
		System.out.println("Entre com os lados do trinagulos 'x' respectivamente A B e C: ");
		
		 x.a = sc.nextDouble();
		 x.b = sc.nextDouble();
		 x.c = sc.nextDouble();
		
		System.out.println("Entre com os lados do trinagulos 'y' respectivamente A B e C: ");
		
		y.a = sc.nextDouble();
		y.b = sc.nextDouble();
		y.c = sc.nextDouble();
		
        double area1 = haron(x.a,x.b,x.c);
        double area2 = haron(y.a, y.b, y.c);
        
        showResult(area1);
        showResult(area2);
	
	/*	
		
		System.out.printf("Area do triangulo X : %.4f" , areax );
		System.out.printf("\nArea do triangulo Y : %.4f" , areay);
		
		if (areax > areay) {
			System.out.println("\nMaior area e: X");
		}else {
			System.out.println("\nMaior area e: Y");
		}*/
		
sc.close();
	}
	public static double haron(double xa, double xb, double xc) {
		double aux,ya = 0,yb = 0 ,yc = 0;
		
		double p = (xa+xb+xc)/2;
		
		double areax = Math.sqrt(p * (p - xa) * ( p - xb) * (p - xc));
		
        //p = (ya+yb+yc)/2;
		
		//double areay = Math.sqrt (p * (p - ya) * ( p - yb) * (p - yc));
		return areax;
		
	}
	public static void showResult(double value) {
		System.out.printf("A area do triangulo e: %.4f " + value);
	}
	

}
