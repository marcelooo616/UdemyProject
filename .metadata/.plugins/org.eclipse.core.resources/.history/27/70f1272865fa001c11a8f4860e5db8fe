package aplication;

import java.util.Scanner;

import entities.conversor;

public class Program {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		conversor dolar = new conversor();
		
		System.out.println("Conversor Dolar");
		System.out.print("Digite a cotação do dolar atual: ");
		dolar.cotacaoDolar = sc.nextDouble();
		System.out.print("Digite o valor em dolar: ");
		dolar.Dolar = sc.nextDouble();
		
		double Real = dolar.Converter();
		
		System.out.println(Real);

	}

}
